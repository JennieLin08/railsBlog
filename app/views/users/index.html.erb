<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
            <td><%= user.name %> </td>
            <td><%= user.username %> </td>
            <td><%= user.email %> </td>
            <td>
            
            <%= link_to "Show User", user_path(user) %>

            <%= button_to "Delete User", delete_user_path(user), method: :delete, data: {confirm: "Are you sure"}%>
             </td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to "New User", new_user_path %>
